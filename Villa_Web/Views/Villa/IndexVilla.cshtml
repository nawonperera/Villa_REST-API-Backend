@model IEnumerable<Villa_Web.Model.Dto.VillaDTO>
<br/>
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Villa" asp-action="CreateVilla"  class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i>Create New Villa</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Occupany
                </th>
                <th>
                    Price
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Occupancy</td>
                    <td>@((item.Rate).ToString("c"))</td>
                    <td>
                        <a asp-controller="Villa" asp-action="UpdateVilla" asp-route-villaId="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        @*  asp-controller="Villa" - Sends the request to the VillaController.
                            asp-action="UpdateVilla" - Calls the UpdateVilla action method inside that controller.
                            asp-route-villaId="@item.Id" - Adds a route parameter named villaId and sets its value to @item.Id.
                            [HttpGet("Villa/UpdateVilla/{villaId}")]
                        *@
                        <a asp-controller="Villa" asp-action="DeleteVilla" asp-route-villaId="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>